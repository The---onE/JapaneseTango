<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmx.tango">

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 基础模块 END -->
    <application
        android:name="com.xmx.tango.core.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 实时通信模块、推送（若使用该功能，需添加以下声明）START -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块、推送 END -->

        <receiver
            android:name=".common.push.ItemMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="com.avos.ITEM_MESSAGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.xmx.tango.core.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.tango.core.activity.SplashActivity"
            android:theme="@style/AppTheme.SplashBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.activity.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--<activity-->
        <!--android:name="com.xmx.tango.User.LoginActivity"-->
        <!--android:launchMode="singleTask"-->
        <!--android:theme="@style/AppTheme.NoActionBar" />-->
        <activity
            android:name=".module.user.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.user.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.tango.AddTangoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.mission.MissionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.importtango.ImportFileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.importtango.ImportTangoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".module.log.OperationLogActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".common.push.ReceiveMessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".module.tango.ImportService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".module.tango.TangoService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>