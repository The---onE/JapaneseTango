<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.test.TestActivity">

    <include layout="@layout/tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3EDCD">

        <EditText
            android:id="@+id/edit_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:hint="仮名を入力します"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/text_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_test"
            android:layout_centerHorizontal="true"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_writing"
            android:layout_centerHorizontal="true"
            android:textSize="42sp" />

        <Button
            android:id="@+id/btn_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_20"
            android:layout_toLeftOf="@+id/layout_keyboard"
            android:background="@null"
            android:text="答案"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_keyboard"
            android:layout_toLeftOf="@+id/layout_keyboard"
            android:background="@null"
            android:text="提示"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_24"
            android:layout_toRightOf="@+id/layout_keyboard"
            android:background="@null"
            android:text="后退"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_keyboard"
            android:layout_toRightOf="@+id/layout_keyboard"
            android:background="@null"
            android:text="空格"
            android:textSize="30sp" />

        <GridLayout
            android:id="@+id/layout_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:columnCount="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_11"
                android:background="@null"
                android:text="あ"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_12"
                android:background="@null"
                android:text="か"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_13"
                android:background="@null"
                android:text="さ"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_21"
                android:background="@null"
                android:text="た"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_22"
                android:background="@null"
                android:text="な"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_23"
                android:background="@null"
                android:text="は"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_31"
                android:background="@null"
                android:text="ま"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_32"
                android:background="@null"
                android:text="や"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_33"
                android:background="@null"
                android:text="ら"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_41"
                android:background="@null"
                android:text="清/浊"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn_42"
                android:background="@null"
                android:text="わ"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_43"
                android:background="@null"
                android:text="平/片"
                android:textSize="28sp" />

        </GridLayout>

    </RelativeLayout>

</LinearLayout>
